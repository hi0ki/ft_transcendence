generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  created_at   DateTime @default(now())
}

// posts table with different types of posts
enum post_type {
  help
  resource
  meme
}

model posts {
  id         Int       @id @default(autoincrement())
  user_id    Int
  type       post_type
  title      String
  content    String
  created_at DateTime  @default(now())
}
